<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activities_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>


        <ViewAnimator
            android:id="@+id/activities_view_animator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateFirstView="false">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/activities_default_text"
                    android:layout_width="wrap_content"
                    android:text="暂无活动，敬请期待"
                    android:textColor="@color/liren_gray1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>

            </FrameLayout>


            <LinearLayout
                android:id="@+id/activities_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:visibility="visible"
                android:background="#f4f4f4">


                <TextView
                    android:background="@color/liren_blue_2"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04月16日Thu"
                    android:id="@+id/textView16"
                    android:layout_marginTop="23dp"

                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

                <ImageView
                    android:src="@drawable/test_activities_pic"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    android:id="@+id/imageView"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢乐海岸HR沙龙"
                    android:textColor="@color/liren_blue_2"
                    android:id="@+id/textView17"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="6dp"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="举办方："
                        android:id="@+id/textView18"
                        android:textSize="14dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天宇咨询"
                        android:textColor="@color/liren_blue_2"
                        android:id="@+id/textView19"
                        android:textSize="14dp"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/liren_gray1"
                    android:id="@+id/frameLayout"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp">
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="沙龙|户外，深圳"
                    android:textColor="@color/liren_gray1"
                    android:id="@+id/textView20"
                    android:textSize="14dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/liren_gray1"
                    android:id="@+id/frameLayout2"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp">
                </FrameLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已浏览："
                        android:id="@+id/textView21"
                        android:layout_marginRight="6dp"
                        android:textSize="14dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="46"
                        android:id="@+id/textView22"
                        android:textSize="14dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已报名：0|50"
                        android:id="@+id/textView24"
                        android:layout_marginLeft="130dp"
                        android:textSize="14dp"/>
                </LinearLayout>

            </LinearLayout>


        </ViewAnimator>
    </FrameLayout>


</android.support.v4.widget.SwipeRefreshLayout>